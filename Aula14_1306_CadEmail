/**
 *
 * @author Tatiana
 */
public class Dados 
{
    private String nome;
    private String email;
    public static List<Dados> lista = new ArrayList();

    public String getNome() {
        return nome;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }
}


No códio-fonte CadEmail colocar nos botões:

private void btFecharActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btFecharActionPerformed
        System.exit(0);
    }//GEN-LAST:event_btFecharActionPerformed

    private void btAdicionarMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_btAdicionarMouseClicked
        if (email.getText().isEmpty() || nome.getText().isEmpty()) {
            JOptionPane.showMessageDialog(rootPane,
                    "Preencha todos os campos",
                    "Aviso",
                    JOptionPane.ERROR_MESSAGE);
        } else {

            if (!email.getText().contains("@")
                    || !email.getText().contains(".")
                    || email.getText().contains(" ")) {
                JOptionPane.showMessageDialog(rootPane,
                        "E-mail inválido!",
                        "Aviso",
                        JOptionPane.ERROR_MESSAGE);
            } else {
                Dados novo = new Dados();
                novo.setEmail(email.getText());
                novo.setNome(nome.getText());
                Dados.lista.add(novo);
                JOptionPane.showMessageDialog(rootPane,
                        nome.getText() + " Adicionado com sucesso!",
                        "Inclusão",
                        JOptionPane.INFORMATION_MESSAGE);
                email.setText("");
                nome.setText(null);
            }
        }
    }//GEN-LAST:event_btAdicionarMouseClicked

    private void btLimparActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btLimparActionPerformed
        email.setText("");
        nome.setText(null);
    }//GEN-LAST:event_btLimparActionPerformed

    private void btListarMouseClicked(java.awt.event.MouseEvent evt) {//GEN-FIRST:event_btListarMouseClicked
        String mensagem="";
        if (Dados.lista.isEmpty()) {
            JOptionPane.showMessageDialog(rootPane,
                        "Não existem e-mails cadastrados!",
                        "Aviso",
                        JOptionPane.INFORMATION_MESSAGE);
            
        } else {
            for(Dados novo:Dados.lista){
                mensagem+= "Nome : "+novo.getNome()+"\nEmail : "+
                        novo.getEmail()+"\n";
            }
            JOptionPane.showMessageDialog(rootPane,
                        mensagem,
                        "Lista de E-mails",
                        JOptionPane.INFORMATION_MESSAGE);
        }
    }//GEN-LAST:event_btListarMouseClicked


