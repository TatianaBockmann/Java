    private void btFecharActionPerformed(java.awt.event.ActionEvent evt) {                                         
        System.exit(0);
    }                                        

    
    
    private void btAdicionarMouseClicked(java.awt.event.MouseEvent evt) {                                         
        if(email.getText().isEmpty() || nome.getText().isEmpty()){
            JOptionPane.showMessageDialog(rootPane, nome.getText() + "Não existe e-mails cadastrados", "Aviso", JOptionPane.ERROR_MESSAGE);
        }
        else{
            if(!email.getText().contains("@") || !email.getText().contains(".") || email.getText().contains("")){
                JOptionPane.showMessageDialog(rootPane, nome.getText() + "Preencha todos os campod", "Aviso", JOptionPane.ERROR_MESSAGE);
            }
            else{
        
        Dados novo = new Dados();
        novo.setEmail(email.getText().toString());
        novo.setNome(nome.getText());
        Dados.lista.add(novo);
        JOptionPane.showMessageDialog(rootPane, nome.getText() + "E-mail inválido!", "Aviso", JOptionPane.INFORMATION_MESSAGE);
        email.setText("");
        nome.setText(null);
        
            }
        }    
    }                                        

    private void btLimparMouseClicked(java.awt.event.MouseEvent evt) {                                      
        email.setText("");
        nome.setText(null);
    }                                     

    private void jButton1MouseClicked(java.awt.event.MouseEvent evt) {                                      
        
        String mensagem = null;
        if(Dados.lista.isEmpty()){
            JOptionPane.showMessageDialog(rootPane, nome.getText() + "não tem e-mail", "Aviso", JOptionPane.INFORMATION_MESSAGE);
        }
        else{
            for(Dados novo: Dados.lista ){
                mensagem+= "Nome: " +novo.getNome()+ " \nEmail:" + novo.getEmail()+"\n";
            }
            JOptionPane.showMessageDialog(rootPane, mensagem, "Lista de E-mails", JOptionPane.INFORMATION_MESSAGE);
        }
    }                                     

